page {
  background: #f2f2f2;
  width: 100%;
  overflow: hidden;
}
.active {
  color: #FFCC33!important;
}
.Block {
  background: white;
  padding: 40rpx; 
  box-sizing: border-box;
  margin-top: 10rpx;
  width: 100%;
}
textarea {
  width: 100%;
  border: 2rpx #ddd solid;
  border-radius: 12rpx;
  outline: none;
  box-sizing: border-box;
  padding: 20rpx;
  resize: none;
}
.Pic {
  margin: 40rpx 0;    
}
.PicBlock {
  position: relative;
  display: inline-block;
  margin-right: 20rpx;
  width: 160rpx;
  height: 160rpx;
  background: #f2f2f2; 
}
.del {
  position: absolute;
  background: rgba(0,0,0,.2);
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  text-align: center;
  bottom: 0;
  left: 0;
  font-size: 28rpx;
  color: #fff;
}
.Pic image {
  width: 100%;
  height: 100%;
}
.small {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}
.food {
  padding-top: 40rpx;
  border-top: 2rpx #ddd solid;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
}
.icon-true {
  font-size: 46rpx;
  margin-left: 40rpx;
  color: #999;
}
.icon-true>text {
  color: #333!important;
  font-size: 36rpx;
}
.submit {
  padding: 40rpx 100rpx;
  background: #FFCC33;
}
